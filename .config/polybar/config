; ~/.config/polybar/config

[bar/mybar]
width = 100%
height = 30
background = #2E3440  ; Nord 0: Polar Night
foreground = #D8DEE9  ; Nord 4: Snow Storm
font-0 = xft:Fira Code:size=10

modules-left = workspaces
modules-center = cpu ram
modules-right = volume date launcher systray

; Workspaces
[module/workspaces]
type = internal/workspaces
label-focused = %name%
label-unfocused = %name%
label-empty = " "
label-urgent = %name%
format = <label>

; System Tray
[module/systray]
type = internal/systray
format = <icon>

; Date and Time
[module/date]
type = internal/date
interval = 1
date = %Y-%m-%d %H:%M:%S
label = %date%

; Volume Control
[module/volume]
type = internal/volume
format-volume = <label>
format-muted = <label>
label-volume = "ðŸ”Š %percentage%"
label-muted = "ðŸ”‡"
; You may need to adjust the command based on your system
format = <label>

; RAM Usage
[module/ram]
type = internal/memory
format = RAM: %used%/%total%
label = %used%/%total%

; CPU Usage
[module/cpu]
type = internal/cpu
format = CPU: %percentage%
label = %percentage%

; Launcher (Rofi or Dmenu)
[module/launcher]
type = custom/script
exec = sh -c "command -v rofi || command -v dmenu"
interval = 1
label = "Launch"
click-left = "sh -c 'rofi -show run || dmenu_run'"
